{
  "version": 2,
  "builds": [
    {
      "src": "icon-generator.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "icon-generator.js"
    },
    {
      "src": "/generate",
      "dest": "icon-generator.js"
    },
    {
      "src": "/generate-crypto",
      "dest": "icon-generator.js"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/dist/$1"
    }
  ]
}
